<p id="notice"><%= notice %></p>

<h1>投稿</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>コンテンツ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to '詳細', article %></td>
        <td><%= link_to '編集', edit_article_path(article) %></td>
        <td><%= link_to '削除', article, method: :delete, data: { confirm: '削除してよろしいでしょうか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_article_path %>
